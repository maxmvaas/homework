#include <iostream>
#include <cmath>

using namespace std;

int main() {
	double x, sum = 0;
	int n, factorial = 1;
	cin >> n >> x;
	for (int i = 1; i <= n; i++) {
		factorial *= i;
	}
	for (int i = 1; i <= n; i++) {
		if (i % 2 == 0) {
			sum += pow(x, 2 * i) / factorial;
		}
		else {
			sum -= pow(x, 2 * i) / factorial;
		}
	}
	cout << sum;
}
